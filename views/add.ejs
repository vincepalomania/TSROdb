<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head.ejs") %>
</head>
<body>
    
    <%- include("./partials/nav.ejs") %>

    <div class="create-blog">
          <h1><%= title %></h1>
        <form action="/station/product/add" method="POST">
          <label for="name">Product Name:</label>
          <input type="text" id="name" name="product_name" placeholder="Baygon" required >
          <label for="price">Product Price:</label> 
          <input type="text" id="price" name="price" placeholder="30" required step="0.01" min="0.01">
          <label for="stock">Stock:</label>
          <input type="text" id="stock" name="stock_quantity" placeholder="30" required min="1">
          <button>Add Product</button>
        </form>
      </div>

      <%- include("./partials/footer.ejs") %>
</body>
</html>